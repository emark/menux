% layout 'default';
% title 'Состав меню';
<h1>Состав меню</h1>

<%= link_to 'Отмена' => "/submenu/" => ('class' => 'lead')%>

<ul>
% foreach my $item(@{$items}){
	<li><%= $item->[1] %> | <%= $item->[2] %> | <%= $item->[3] %> <%= link_to 'X' => "/submenu/$menu_id/$type/$item->[0]/" %></li>
% };
</ul>


%= form_for '' => (method => 'POST') => begin
	%= text_field 'name'
	%= text_field 'yield'
	%= text_field 'calories'
	%= submit_button

% end

